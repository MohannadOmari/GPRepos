<%- include('../includes/head.ejs') %> <%- include('../includes/header.ejs') %>

<section class="d-flex flex-row justify-content-center mb-3">

		 <%- include("../includes/car.ejs", {car: auction.cars[nextCar]}) %>

	
</section>
<section class="m-auto container text-center bg-white bid-container">
	<div>
		<h2 class="text-grey">Bid Information</h2>
	</div>
	<div>
		<h4 class="h-4 mt-4">
			Current Price: <i> <%= auction.cars[nextCar].price %>$</i>
		</h4>
	</div>
	<div>
		<form action="/auction/bidding/<%= auction.cars[nextCar]._id %>" method="post">
			<input type="hidden" name="_csrf" value="<%= csrfToken %>">
			<div class="mt-4">
				<button
					id="add-button"
					type="button"
					class="btn btn-primary mr-3"
				>
					+
				</button>
				<label class="form-label"
					><input type="number" name="bid" id="bid-amount" class="text-center" placeholder="100"/>
				</label>
				<button
					id="decline-button"
					type="button"
					class="btn btn-danger ml-3"
				>
					-
				</button>
			</div>
			<button id="bid-button" class="btn btn-success mt-1 mb-2" type="submit">
				Bid
			</button>
		</form>
	</div>

</section>

<% if (isAdmin) { %>
	<form action="/auction/next" method="post" style="text-align: center;" class="mt-5">
		<input type="hidden" name="_csrf" value="<%= csrfToken %>">
		<button type="submit" class="btn btn-success w-25"  >Next Car</button>
	</form>
<% } %>

<script src="../js/bid.js"></script>
<%- include("../includes/end.ejs") %>