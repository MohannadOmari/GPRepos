<%- include('../includes/head.ejs') %> <%- include('../includes/header.ejs') %>

<div id="signup-container" class="container mt-5 w-100 bg-white">
	<h2 id="heading" class="text-center text-grey">Contact Us</h2>
	<form action="/contact-us" method="post">
		<div class="input-group mb-3">
			<input
				style="width: 0auto"
				required
				type="text"
				class="form-control"
				placeholder="First Name"
				aria-label="FirstName"
				aria-describedby="basic-addon1"
				name="user[firstName]"
			/>
			<input
				style="width: 0auto"
				required
				type="text"
				class="form-control"
				placeholder="Last Name"
				aria-label="LastName"
				aria-describedby="basic-addon1"
				name="user[lastName]"
			/>
		</div>
		<div class="input-group mb-3">
			<input
				required
				type="email"
				class="form-control"
				placeholder="Email"
				aria-label="Email"
				aria-describedby="basic-addon2"
				name="user[email]"
			/>
			<span class="input-group-text" id="basic-addon2">@example.com</span>
		</div>

        <div class="input-group mb-3">
			<textarea required type="text"class="form-control"
  placeholder="Please enter your comment" ></textarea>
				
        
	</div>

		<div id="submit-button" class="text-center">
			<button type="submit" class="btn btn-primary mt-3">Submit</button>
		</div>
	</form>
</div>


<%- include("../includes/end.ejs") %>