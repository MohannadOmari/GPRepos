<%- include('../includes/head.ejs') %> <%- include('../includes/header.ejs') %>

<!--organizer signup-->
<div id="containers" class="container mt-5 w-100 bg-white">
	<h2 id="heading" class="text-center text-grey">Sign Up</h2>
	<form action="/organizer-signup" method="post">
		<input type="hidden" name="_csrf" value="<%= csrfToken %>">
		<div class="input-group mb-3">
			<input
				required
				type="text"
				class="form-control"
				placeholder="First Name"
				aria-label="FirstName"
				aria-describedby="basic-addon1"
				name="org[firstName]"
			/>
		</div>

		<div class="input-group mb-3">
			<input
				required
				type="text"
				class="form-control"
				placeholder="Last Name"
				aria-label="LastName"
				aria-describedby="basic-addon1"
				name="org[lastName]"
			/>
		</div>

		<div class="input-group mb-3">
			<input
				required
				type="email"
				class="form-control"
				placeholder="Email"
				aria-label="Email"
				aria-describedby="basic-addon2"
				name="org[email]"
			/>
			<span class="input-group-text" id="basic-addon2">@example.com</span>
		</div>

		<div class="input-group mb-3">
			<input
				required
				type="number"
				class="form-control"
				placeholder="Phone Number"
				aria-label="PhoneNumber"
				aria-describedby="basic-addon1"
				name="org[phoneNumber]"
			/>
		</div>

		<div class="align-items-center">
			<div class="">
				<input
					required
					type="password"
					id="inputPassword6"
					class="form-control"
					placeholder="Password"
					aria-describedby="passwordHelpInline"
					name="org[password]"
				/>
			</div>
		</div>
		<div class="align-items-center">
			<div class="mt-3">
				<input
					required
					type="password"
					id="inputPassword6"
					class="form-control"
					placeholder="Confirm Password"
					aria-describedby="passwordHelpInline"
				/>
			</div>
		</div>
		
		<div class="input-group mt-3">
			<textarea
				required
				placeholder="Location"
				name="org[location]"
				class="form-control"
				id=""
				cols="20"
				rows="5"
			></textarea>
		</div>
		
        <div class="align-items-center">
			<div class="mt-3">
				<label for="img">Credentials:</label>
				<input
				    id="img"
					required
					type="file"
					class="form-control"
					placeholder="Credentials"
					aria-describedby="basic-addon1"
					name="org[credentials]"
					accept="image/*"
				/>
			</div>
		</div>
      
		

		<div id="submit-button" class="text-center">
			<button type="submit" class="btn btn-primary mt-3">Sign Up</button>
		</div>
	</form>
</div>
<%- include("../includes/end.ejs") %>
