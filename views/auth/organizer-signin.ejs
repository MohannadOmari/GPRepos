<%- include('../includes/head.ejs') %> <%- include('../includes/header.ejs') %>

<!--organizer signin-->
<div id="containers" class="container mt-5 w-100 bg-white">
	<h2 id="heading" class="text-center text-grey">Sign in</h2>
	<% if (errorMessage) { %>
		<div class="user-message user-message--error"><%= errorMessage %></div>
	<% } %>
	<form action="/organizer-signin" method="post">
		<input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="input-group mb-3">
			<input
				required
				type="email"
				class="form-control"
				placeholder="Email"
				aria-label="Email"
				aria-describedby="basic-addon2"
				name="org[email]"
			/>
			<span class="input-group-text" id="basic-addon2">@example.com</span>
		</div>

        <div class="align-items-center password-container">
			<div class="">
				<input
					required
					type="password"
					id="inputPassword6"
					class="form-control"
					placeholder="Password"
					aria-describedby="passwordHelpInline"
					name="org[password]"
				/>
				<i class="fa-solid fa-eye" id="eye"></i>
			
			</div>
		</div>

        <div id="submit-button" class="text-center">
			<button type="submit" class="btn btn-primary mt-3">Sign in</button>
		</div>
	</form>
</div>

<script src="../js/password.js"></script>
<%- include("../includes/end.ejs") %>

