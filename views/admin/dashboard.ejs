<%- include('../includes/admin-head.ejs') %><link
	rel="stylesheet"
	href="../css/admin.css"
/><link
	href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
	rel="stylesheet"
/>
<%- include('../includes/admin-sidebar.ejs') %>

<section class="home-section">
	<%- include('../includes/admin-nav.ejs') %>

	<div class="home-content">
		<div class="overview-boxes">
			<div class="box">
				<div class="right-side">
					<div class="box-topic">Total Auctions</div>
					<div class="number"><%= auctions.length %></div>
				</div>
			</div>
			<div class="box">
				<div class="right-side">
					<div class="box-topic">Total Cars Sold</div>
					<div class="number"><%= cars.length %></div>
				</div>
			</div>
		</div>

		<div class="sales-boxes">
			<div class="recent-sales box">
				<div class="title">Recent Sales</div>
				<% for (let car of cars) {%>
				<div class="sales-details">
					<ul class="details">
						<li class="topic">Date</li>
						<li><a href="#"><%= car.updatedAt.toString().substring(0,
							car.updatedAt.toString().indexOf(':') - 2) %></a></li>
					</ul>
					<ul class="details">
						<li class="topic">Car</li>
						<li><a href="#"><%= car.brand %></a></li>
					</ul>
					<ul class="details">
						<li class="topic">Organizer</li>
						<li><a href="#"><%= car.author.firstName + ' ' + car.author.lastName %></a></li>
					</ul>

					<ul class="details">
						<li class="topic">Car Worth</li>
						<li><a href="#"><%= car.price %></a></li>
					</ul>
					<ul class="details">
						<li class="topic">Status</li>
						<li>
							<a class="button" style="color: #fff" href="#"
								>Sold</a
							>
						</li>
					</ul>
					
				</div>
				<% } %>
			</div>

		</div>
	</div>
</section>

<%- include('../includes/admin-end.ejs') %>
