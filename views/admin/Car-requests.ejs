<%- include('../includes/admin-head.ejs') %>
<link rel="stylesheet" href="../css/admin.css" />
<link
	href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
	rel="stylesheet"
/>
<%- include('../includes/admin-sidebar.ejs') %>
<section class="home-section">
	<%- include('../includes/admin-nav.ejs') %>
	<div class="home-content">
		<div class="sales-boxes">
			<div class="recent-sales box">
				<div class="title">Recent Applicants</div>
				<% for (let car of cars) { %>
					<% if (car.status === "pending") { %>
				<div class="sales-details">
					<ul class="details">
						<li class="topic">Date</li>
						<li><a href="#"> <%= car.startDate %> </a></li>
					</ul>
					<ul class="details">
						<li class="topic">Author</li>
						<li><a href="#"><%= car.author %></a></li>
					</ul>
					<ul class="details">
						<li class="topic">Number of Cars</li>
						<li><a href="#"><%= car.cars.length %></a></li>
					</ul>

					<ul class="details">
						<li class="topic">Status</li>

						<li>
							<form action="/accept-car" method="post">
							<button type="submit"
								class="button"
								style="color: #fff; background-color: red"
								href="#"
								>Accept
							</button>
							<input type="hidden" value="<%= car._id %>" name="carId">
							</form>
						</li>
						<li>
							<form action="/reject-car" method="post">
							<button type="submit"
								class="button"
								style="color: #fff; background-color: red"
								href="#"
								>Reject
							</button>
							<input type="hidden" value="<%= car._id %>" name="carId">
							</form>
						</li>
					</ul>
				</div>
				<% }} %>
			</div>
		</div>
	</div>
</section>

<%- include('../includes/admin-end.ejs') %>
