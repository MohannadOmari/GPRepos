<%- include('../includes/admin-head.ejs') %>
<link rel="stylesheet" href="../css/admin.css" />
<link
	href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
	rel="stylesheet"
/>
<%- include('../includes/admin-sidebar.ejs') %>
<section class="home-section">
	<%- include('../includes/admin-nav.ejs') %>
	<div class="home-content">
		<div class="sales-boxes">
			<div class="recent-sales box">
				<div class="title">Recent Applicants</div>
				<% for (let org of orgs) { %>
					<% if (org.status === "Pending") { %>
				<div class="sales-details">
					<ul class="details">
						<li class="topic">Date</li>
						<li><a href="#"> <%= org.createdAt %> </a></li>
					</ul>
					<ul class="details">
						<li class="topic">Organizer</li>
						<li><a href="#"> <%= org.firstName + ' ' + org.lastName %> </a></li>
					</ul>
					<!-- <ul class="details">
						<li class="topic">Credential</li>
						<li><a href="#">5050</a></li>
					</ul> -->

				
					<ul class="details">
						<li class="topic">Status</li>
						<li>
							<form action="/accept-organizer" method="post">
								<button type="submit"
									class="button"
									style="color: #fff; background-color: red"
									href="#"
									>Accept
								</button>
								<input type="hidden" value="<%= org._id %>" name="orgId">
						</li>
						<li>
							<form action="/reject-organizer" method="post">
								<button type="submit"
									class="button"
									style="color: #fff; background-color: red"
									href="#"
									>Reject
								</button>
								<input type="hidden" value="<%= org._id %>" name="orgId">
						</li>
					</ul>
				</div>
				<% }} %>
			</div>
		</div>
	</div>
</section>

<%- include('../includes/admin-end.ejs') %>
